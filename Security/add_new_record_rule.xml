<?xml version="1.0" encoding="utf-8"?>
<!-- file_name : security/module_name_security.xml -->
<odoo>
    <data noupdate="1">
        <!-- User Access Rules -->
        <record id="model_name_rule_perms" model="ir.rule">
            <field name="name">User can only see their own records</field>
            <field name="model_id" ref="module_name.model_name_from_access_right"/>
            <field name="domain_force">[('field_name', 'operator', VALUE)]</field>
            <field name="groups" eval="[(4, ref('group_external_id'))]"/>
            <field name="perm_create" eval="bool"/>
            <field name="perm_read" eval="bool"/>
            <field name="perm_write" eval="bool"/>
            <field name="perm_unlink" eval="bool"/>
            <field name="active" eval="bool"/>
        </record>
    </data>
</odoo>

