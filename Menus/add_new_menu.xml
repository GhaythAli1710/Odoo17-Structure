        <!-- ******************************************************************************
                    Add Sub Menu " add submenu to exist menu "
        -->
<odoo>
<data>
    <!-- Submenu menu_name in parent_menu -->
    <menuitem id="module_name_menu_menu_name"
              name="module_name"
              parent="module_name.parent_menu_external_id"
              groups="group_external_id"
              sequence="sequence_number"
              action="module_name.window_action_external_id"/>
</data>
</odoo>

