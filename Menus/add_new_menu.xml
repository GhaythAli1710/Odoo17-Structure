<!-- file_name : views/module_name_menus.xml -->

<!-- ******************************************************************************
           Add Root Menu " add new app to apps in root menu "
-->
<odoo>
    <data>
        <!-- Top level menu : no parent -->
        <menuitem id="module_name_menu_root"
                  name="module_name"
                  groups="group_external_id"
                  sequence="sequence_number"
                  web_icon="module_name,static/description/app_icon.png"
                  action="module_name.window_action_external_id"/>
    </data>
</odoo>

