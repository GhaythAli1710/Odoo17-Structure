<!-- file_name : views/model_name_views.xml -->
<!--
    ** Requirements:
    - Need add dependency for the module :
      configure the manifest file, and add 'depends' as 'mail' { 'depends' : ['mail'] }

   - Create a new model :
     inherit 'mail.thread' and 'mail.activity.mixin'
     { _inherit=['mail.thread','mail.activity.mixin'] }
-->
<odoo>
    <data>
        <!-- explicit activity view definition -->
        <record id="model_name_view_activity" model="ir.ui.view">
            <field name="name">model.name.view.activity</field>
            <field name="model">model.name</field>
            <field name="arch" type="xml">
                <activity string="activity_name">
                    <!-- design activity -->
                </activity>
            </field>
        </record>
    </data>
</odoo>

