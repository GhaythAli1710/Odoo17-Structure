<!-- file_name : views/model_name_views.xml -->
<odoo>
    <data>
        <!-- explicit kanban view definition -->
        <record id="model_name_view_kanban" model="ir.ui.view">
            <field name="name">model.name.view.kanban</field>
            <field name="model">model.name</field>
            <field name="arch" type="xml">
                <kanban string=" "
                        create="true"
                        edit="true"
                        delete="true"
                        default_group_by="field_name"
                        class="design_class"
                        group_create="true"
                        group_delete="true"
                        group_edit="true"
                        quick_create="true"
                        quick_create_view="module_name.quick_create_view_form_external_id"
                        records_draggable="true"
                        groups_draggable="true"
                        sample="sample_number"
                        archivable="false"
                        on_create="quick_create">
                    <templates>
                        <t t-name="kanban-menu">
                            <t t-if="widget.editable">
                                <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                            </t>
                            <t t-if="widget.deletable">
                                <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                            </t>
                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                        </t>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                                <!-- card design -->
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>

