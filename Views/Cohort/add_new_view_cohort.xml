<!-- file_name : views/model_name_views.xml -->
<odoo>
    <data>
        <!-- explicit cohort view definition -->
        <record id="model_name_view_cohort" model="ir.ui.view">
            <field name="name">model.name.view.cohort</field>
            <field name="model">model.name</field>
            <field name="arch" type="xml">
                <cohort string="Cohort Name"
                        date_start="field_create_date"
                        date_stop="field_date"
                        interval="interval_option"
                        mode="mode_option"/>
            </field>
        </record>
    </data>
</odoo>

        <!--
        interval_options = {day, week, month, year}
        mode_options = {Retention, Churn}
        -->

