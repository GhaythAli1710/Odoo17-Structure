<!-- file_name : views/model_name_views.xml -->
<!--
    ** Requirements:
   - Create a new model :
     inherit 'ir.ui.view'

     class ModelName(..):
        _inherit=['ir.ui.view']

        field_name = fields.Selection(
                   selection_add=[('qweb_view', "QWEB View")],
                   ondelete={'qweb_view': 'cascade'})
-->
<odoo>
    <data>
        <!-- explicit qweb view definition -->
        <record id="model_name_view_qweb" model="ir.ui.view">
            <field name="name">model.name.view.qweb</field>
            <field name="model">model.name</field>
            <field name="arch" type="xml">
                <qweb_view>
                    <t t-call="module_name.template_external_id">
                        <t t-set="model" t-value="model_name"/>
                    </t>
                </qweb_view>
            </field>
        </record>
    </data>
</odoo>

