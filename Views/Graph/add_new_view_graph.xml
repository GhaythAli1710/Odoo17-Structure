<!-- file_name : views/model_name_views.xml -->
<odoo>
    <data>
        <!-- explicit graph view definition -->
        <record id="model_name_view_graph" model="ir.ui.view">
            <field name="name">model.name.view.graph</field>
            <field name="model">model.name</field>
            <field name="arch" type="xml">
                <graph string="Graph Name"
                       model="model_name"
                       type="type_option"
                       clustered="True"
                       order="descending"
                       sample="1">
                    <!-- design graph -->
                </graph>
            </field>
        </record>
    </data>
</odoo>

