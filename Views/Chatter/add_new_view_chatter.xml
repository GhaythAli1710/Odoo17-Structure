<!-- file_name : views/model_name_views.xml -->
<!--
    ** Requirements:
    - Need add dependency for the module :
      configure the manifest file, and add 'depends' as 'mail' { 'depends' : ['mail'] }

   - Create a new model :
     inherit 'mail.thread'
     { _inherit=[
            'mail.thread',
            'mail.activity.mixin' # "optional" with field : activity_ids
       ] }

   - Add tracking field "optional"
     class ModelName(..):
        _inherit=['mail.thread', 'mail.activity.mixin']

        tracking_field_name=fields.FieldType(tracking=True)
-->
<odoo>
    <data>
        <!-- explicit chatter in form view definition -->
        <record id="model_name_view_form" model="ir.ui.view">
            <field name="name">model.name.view.form</field>
            <field name="model">model.name</field>
            <field name="arch" type="xml">
                <shest>
                    <!-- design form -->
                </shest>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <!-- optional field -->
                    <field name="activity_ids"/>
                </div>
            </field>
        </record>
    </data>
</odoo>

