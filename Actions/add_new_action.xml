<!-- file_name : views/model_name_views.xml -->
<odoo>
    <data>
        <!-- explicit window action opening default views on specific model -->
        <record id="model_name_window_action" model="ir.actions.act_window">
            <field name="name">action_name</field>
            <field name="res_model">model.name</field>
            <field name="view_mode">modes</field>
        </record>
    </data>
</odoo>

